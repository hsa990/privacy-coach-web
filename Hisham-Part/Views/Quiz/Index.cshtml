@{
    ViewData["Title"] = "Privacy Quiz";
}

<h1 class="text-center mt-4">Privacy Awareness Quiz</h1>
<p class="text-center text-muted">Answer the 10 simple questions below.</p>

<form asp-action="SubmitQuiz" method="post" class="mt-4">

    <!-- Q1 -->
    <div class="mb-4">
        <label class="fw-bold">1. Which password is the safest?</label>
        <select name="q1" class="form-control" required>
            <option value="">Select</option>
            <option value="0">123456</option>
            <option value="0">myname2024</option>
            <option value="1">N3xt!Level#92</option>
        </select>
    </div>

    <!-- Q2 -->
    <div class="mb-4">
        <label class="fw-bold">2. What should you do before installing a new app?</label>
        <select name="q2" class="form-control" required>
            <option value="">Select</option>
            <option value="1">Check its permissions</option>
            <option value="0">Install immediately</option>
            <option value="0">Accept everything blindly</option>
        </select>
    </div>

    <!-- Q3 -->
    <div class="mb-4">
        <label class="fw-bold">3. Which is a good privacy habit?</label>
        <select name="q3" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Reuse passwords everywhere</option>
            <option value="1">Use Two-Factor Authentication</option>
            <option value="0">Share passwords with friends</option>
        </select>
    </div>

    <!-- Q4 -->
    <div class="mb-4">
        <label class="fw-bold">4. Safest way to use public Wi-Fi?</label>
        <select name="q4" class="form-control" required>
            <option value="">Select</option>
            <option value="1">Use a VPN</option>
            <option value="0">Login to bank normally</option>
            <option value="0">Share files with others</option>
        </select>
    </div>

    <!-- Q5 -->
    <div class="mb-4">
        <label class="fw-bold">5. Which message is likely a scam?</label>
        <select name="q5" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Package pickup reminder</option>
            <option value="1">“Your bank account is locked! Click here.”</option>
            <option value="0">Class reminder</option>
        </select>
    </div>

    <!-- Q6 -->
    <div class="mb-4">
        <label class="fw-bold">6. When should you update apps?</label>
        <select name="q6" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Never</option>
            <option value="1">Regularly for security</option>
            <option value="0">Only when forced</option>
        </select>
    </div>

    <!-- Q7 -->
    <div class="mb-4">
        <label class="fw-bold">7. What should you avoid posting online?</label>
        <select name="q7" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Food photos</option>
            <option value="1">Your ID card</option>
            <option value="0">Sunset pictures</option>
        </select>
    </div>

    <!-- Q8 -->
    <div class="mb-4">
        <label class="fw-bold">8. A strong password includes…</label>
        <select name="q8" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Only letters</option>
            <option value="0">Only numbers</option>
            <option value="1">Mix of letters, numbers, symbols</option>
        </select>
    </div>

    <!-- Q9 -->
    <div class="mb-4">
        <label class="fw-bold">9. Safest way to store important files:</label>
        <select name="q9" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Downloads folder</option>
            <option value="1">Encrypted or secure cloud</option>
            <option value="0">Public shared folder</option>
        </select>
    </div>

    <!-- Q10 -->
    <div class="mb-4">
        <label class="fw-bold">10. Website asks for too many permissions. You should:</label>
        <select name="q10" class="form-control" required>
            <option value="">Select</option>
            <option value="0">Allow everything</option>
            <option value="1">Close the website</option>
            <option value="0">Ignore the warning</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Submit Quiz</button>

</form>
